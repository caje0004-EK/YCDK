---
import { Image } from "astro:assets";
import ButtonBlue from "./buttons/ButtonBlue.astro";
const { placeholder, buttonText, text, title } = Astro.props;
---

<section class="feature">
  <Image src={placeholder} alt="Beskrivende tekst" class="placeholder" class="img" />
  <div class="content">
    <h3>{title}</h3>
    <p>{text}</p>
    <ButtonBlue buttonText={buttonText} />
  </div>
</section>

<style>
  .content {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .feature {
    margin: 1rem;
  }

  @media (width>=800px) {
    .feature {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 5rem;
    }

    .feature .img {
      grid-column: -1/-2;
      grid-row: 1/2;
    }

    .content {
      grid-column: 1/2;
      grid-row: 1/2;
    }
  }
</style>
