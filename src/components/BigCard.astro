---
import ButtonBlue from "./buttons/ButtonBlue.astro";
const { faq, buttonText, text, title } = Astro.props;
---

<section class="feature">
  <div class="video-wrapper">
    <video src={faq} autoplay muted loop playsinline></video>
  </div>
  <div class="content">
    <h3>{title}</h3>
    <p>{text}</p>
    <ButtonBlue buttonText={buttonText} />
  </div>
</section>

<style>
  .content {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .feature {
    margin: 4rem 1rem;
  }

  .video-wrapper {
    overflow: hidden;
  }

  .video-wrapper :global(video) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .video-wrapper video {
    width: 100%;
    height: 100%;
  }

  @media (width>=800px) {
    .feature {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 5rem;
    }
  }
</style>
