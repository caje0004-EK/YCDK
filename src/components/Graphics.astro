---
import ButtonPink from "./buttons/ButtonPink.astro";
const { buttonText, title } = Astro.props;
---

<section class="feature">
  <div class="content">
    <h2>{title}</h2>
    <ButtonPink buttonText={buttonText} />
  </div>
</section>

<style>
  .content {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    margin: 2rem;
    max-width: 60ch;
  }

  .feature {
    display: flex;
    justify-content: center;
    background-color: rgb(0, 78, 118);
    padding: 10rem 0;
  }

  h2 {
    color: rgb(255, 202, 227);
  }
</style>
