---
import ButtonPink from "./buttons/ButtonPink.astro";
import SectionVideo from "../assets/YCDK.mp4";
const { buttonText, title } = Astro.props;
---

<section class="feature">
  <div class="video-wrapper">
    <video src={SectionVideo} autoplay muted loop playsinline></video>
  </div>
  <div class="content">
    <h2>{title}</h2>
    <ButtonPink buttonText={buttonText} />
  </div>
</section>

<style>
  .feature {
    position: relative;
    display: grid;
    place-items: center;
    min-height: 70vh;
    overflow: hidden;
  }

  .video-wrapper {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  .video-wrapper :global(video) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .video-wrapper video {
    width: 100%;
    height: 100%;
  }

  .content {
    position: relative;
    z-index: 1;
    max-width: 40vw;
    gap: 1em;
  }

  .content h2 {
    color: #ffcae3;
    font-size: clamp(16px, 3.5vw, 70px);
  }

  @media (width<=800px) {
    .feature {
      min-height: 60vh;
    }

    .video-wrapper :global(video) {
      object-fit: cover;
      object-position: 40% center;
    }

    .content {
      max-width: 50vw;
      margin-left: 3rem;
    }
    .content h2 {
      font-size: clamp(16px, 4vw, 70px);
    }
  }
</style>
